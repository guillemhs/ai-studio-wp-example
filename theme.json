{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "useRootPaddingAwareAlignments": true,
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },
    "color": {
      "defaultPalette": false,
      "palette": [
        {
          "slug": "agile-bg",
          "color": "#F5F5F5",
          "name": "White Smoke"
        },
        {
          "slug": "agile-text",
          "color": "#242424",
          "name": "Text Main"
        },
        {
          "slug": "agile-primary",
          "color": "#057EB5",
          "name": "Primary Blue"
        },
        {
          "slug": "agile-vibrant",
          "color": "#00B2E9",
          "name": "Vibrant Blue"
        },
        {
          "slug": "agile-green",
          "color": "#499497",
          "name": "Nature Green"
        },
        {
          "slug": "agile-turq",
          "color": "#4CB8C9",
          "name": "Nature Turquoise"
        },
        {
          "slug": "agile-deep",
          "color": "#01003f",
          "name": "Deep Dark Blue"
        },
        {
          "slug": "white",
          "color": "#ffffff",
          "name": "White"
        }
      ],
      "gradients": [
        {
          "slug": "deep-ocean",
          "gradient": "linear-gradient(135deg, #01003f 0%, #057EB5 100%)",
          "name": "Deep Ocean"
        },
        {
          "slug": "tech-human",
          "gradient": "linear-gradient(135deg, #4CB8C9 0%, #00B2E9 100%)",
          "name": "Tech Human"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "\"Work Sans\", sans-serif",
          "slug": "heading",
          "name": "Work Sans"
        },
        {
          "fontFamily": "\"Nunito\", sans-serif",
          "slug": "body",
          "name": "Nunito"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "1rem",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "1.125rem",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "1.5rem",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "2rem",
          "name": "Extra Large"
        },
        {
          "slug": "xx-large",
          "size": "3rem",
          "name": "XX Large"
        },
        {
          "slug": "hero",
          "size": "4.5rem",
          "name": "Hero"
        }
      ]
    },
    "spacing": {
      "spacingScale": {
        "steps": 0
      },
      "spacingSizes": [
        {
          "slug": "20",
          "size": "0.5rem",
          "name": "Space 20"
        },
        {
          "slug": "40",
          "size": "1.5rem",
          "name": "Space 40"
        },
        {
          "slug": "60",
          "size": "2.5rem",
          "name": "Space 60"
        },
        {
          "slug": "80",
          "size": "4rem",
          "name": "Space 80"
        }
      ],
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "shadow": {
      "presets": [
        {
          "name": "Card Default",
          "slug": "card",
          "shadow": "0 4px 6px -1px rgba(0, 0, 0, 0.05)"
        },
        {
          "name": "Card Hover",
          "slug": "card-hover",
          "shadow": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
        }
      ]
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--body)",
      "lineHeight": "1.6",
      "fontSize": "var(--wp--preset--font-size--medium)"
    },
    "color": {
      "background": "var(--wp--preset--color--agile-bg)",
      "text": "var(--wp--preset--color--agile-text)"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontWeight": "800",
          "lineHeight": "1.1"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontWeight": "700"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontWeight": "600"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontWeight": "600"
        }
      },
      "button": {
        "color": {
          "text": "#ffffff",
          "background": "var(--wp--preset--color--agile-primary)"
        },
        "border": {
          "radius": "4px"
        },
        "spacing": {
          "padding": {
            "top": "0.85rem",
            "bottom": "0.85rem",
            "left": "1.75rem",
            "right": "1.75rem"
          }
        },
        "typography": {
          "fontSize": "1.1rem",
          "fontWeight": "600"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--agile-primary)"
        },
        ":hover": {
           "color": { "text": "var(--wp--preset--color--agile-vibrant)" }
        }
      }
    },
    "blocks": {
      "core/navigation": {
        "typography": {
           "fontSize": "1rem"
        }
      }
    }
  },
  "templateParts": [
    {
      "area": "header",
      "name": "header",
      "title": "Header"
    },
    {
      "area": "footer",
      "name": "footer",
      "title": "Footer"
    }
  ]
}